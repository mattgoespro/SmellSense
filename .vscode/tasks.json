{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "adb: connect to wifi device",
      "detail": "Connect to a device over Wi-Fi.",
      "type": "shell",
      "command": "./scripts/connect_device.sh -d wifi",
      "isBackground": true,
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "group": "debug",
        "revealProblems": "onProblem"
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^(error: no devices connected\\.|error: failed to connect to device\\.|error: adb failed to bridge connection to device '\\w+' over wi-fi\\.)$",
              "file": 1,
              "line": 1,
              "message": 1
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^connecting to device over wi-fi\\.$",
            "endsPattern": "^(error: failed to connect to device\\.|error: adb failed to bridge connection to device '\\w+' over wi-fi\\.)$"
          }
        }
      ]
    },
    {
      "label": "adb: launch virtual device",
      "detail": "Launch a virtual device.",
      "type": "shell",
      "command": "emulator -avd Pixel_6_API_34 -gpu host -grpc-use-jwt",
      "isBackground": true,
      "group": {
        "kind": "test"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "debug",
        "revealProblems": "onProblem"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^emulator: INFO: boot completed",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^emulator: INFO: boot completed",
            "endsPattern": "^$"
          }
        }
      ]
    },
    {
      "label": "adb: sync db from device",
      "detail": "Sync the database file from the android device to a database file in the project.",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/sync_db_from_device.sh",
      "isBackground": true,
      "group": {
        "kind": "test"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "debug",
        "revealProblems": "onProblem"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+): (.*): (.*)$",
            "file": 1,
            "location": 2,
            "severity": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^adb: error:.*$",
            "endsPattern": "^$"
          }
        }
      ],
      "dependsOn": ["build_runner: watch"]
    },
    {
      "label": "build_runner: watch",
      "detail": "Run build runner and watch for changes.",
      "type": "shell",
      "command": "dart run build_runner watch",
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "build",
        "revealProblems": "onProblem"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$dart-build_runner"
    },
    {
      "label": "build_runner: build",
      "detail": "Run build runner.",
      "type": "shell",
      "command": "dart run build_runner build",
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "build",
        "revealProblems": "onProblem"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$dart-build_runner"
    },
    {
      "label": "flutter: test",
      "detail": "flutter: test",
      "type": "flutter",
      "command": "test",
      "args": ["--coverage", "--no-pub"],
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "group": "test",
        "revealProblems": "onProblem"
      },
      "group": {
        "kind": "test"
      }
    },
    {
      "label": "dart: fix",
      "detail": "Run dart fix.",
      "type": "shell",
      "command": "scripts/fix.sh",
      "isBackground": true,
      "group": {
        "kind": "test"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "panel": "dedicated",
        "group": "test",
        "revealProblems": "onProblem"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+): (.*): (.*)$",
            "file": 1,
            "location": 2,
            "severity": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^(.*):(\\d+):(\\d+): (.*): (.*)$",
            "endsPattern": "^$"
          }
        }
      ]
    }
  ]
}
