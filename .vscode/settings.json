{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[gradle-build]": {
    "editor.defaultFormatter": "vscjava.vscode-gradle",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.eol": "\n"
  },
  "[gradle]": {
    "editor.defaultFormatter": "vscjava.vscode-gradle",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "files.eol": "\n"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[properties]": {
    "files.eol": "\n"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  // "[xml]": {
  //   "editor.defaultFormatter": "redhat.vscode-xml"
  // },
  // "terminal.integrated.shellIntegration.enabled": false,
  "dart.debugExternalPackageLibraries": true,
  "dart.debugSdkLibraries": true,
  "dart.flutterHotReloadOnSave": "manual",
  "dart.renameFilesWithClasses": "prompt",
  "dart.flutterCustomEmulators": [
    {
      "name": "Pixel 6 API 34",
      "id": "Pixel_6_API_34",
      "emulatorPath": "emulator",
      "args": ["-avd", "Pixel_6_API_34", "-gpu", "host", "-grpc-use-jwt"]
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "always"
  },
  // "gradle.nestedProjects": true,
  // "java.gradle.buildServer.openBuildOutput": "openOnBuildStart",
  // "gradle.allowParallelRun": true,
  // "gradle.autoDetect": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true,
    ".dart_tool": true,
    ".flutter-plugins": true,
    ".flutter-plugins-dependencies": true,
    ".idea": true,
    ".packages": true,
    "pubspec.lock": true
  },
  "json.schemas": [
    {
      "description": "Codemagic CI/CD file configuration",
      "fileMatch": ["codemagic.yml", "codemagic.yaml"],
      "url": "https://codemagic.io/codemagic-schema.json"
    }
  ],
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "dart.hotReloadPatterns": ["lib/**"],
  "dart.hotReloadOnSave": "manual",
  "dart.previewHotReloadOnSaveWatcher": true
  // "yaml.schemas": {
  //   "https://static.codemagic.io/codemagic-schema.json": "https://codemagic.io/codemagic-schema.json"
  // },
}
