{
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "dart.analysisExcludedFolders": [
    ".config/",
    ".dart_tool/",
    ".git/",
    ".idea/",
    ".vscode/",
    "android/",
    "assets/",
    "build/",
    "coverage/",
    "ios/",
    "scripts/",
    "tools/"
  ],
  "dart.debugSdkLibraries": true,
  "dart.lineLength": 80,
  "dart.showTodos": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.exclude": {
    ".git": true,
    ".dart_tool": true
  },
  "search.exclude": {
    "**/.idea": true,
    "**/.vscode": true,
    "**/build": true
  },
  "json.schemas": [
    {
      "description": "Codemagic CI/CD file configuration",
      "fileMatch": ["codemagic.yml", "codemagic.yaml"],
      "url": "https://codemagic.io/codemagic-schema.json"
    }
  ],
  "terminal.integrated.automationProfile.windows": {
    "args": ["-l"],
    "icon": "terminal-decoration-mark",
    "overrideName": true,
    "path": "C:\\Program Files\\Git\\bin\\bash.exe"
  },
  "terminal.integrated.defaultProfile.windows": "flutter-bash",
  "terminal.integrated.profiles.windows": {
    "flutter-bash": {
      "args": ["-l"],
      "icon": "terminal-linux",
      "overrideName": true,
      "path": "C:\\Program Files\\Git\\bin\\bash.exe"
    }
  }
}
